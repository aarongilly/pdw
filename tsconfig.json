{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // "noEmit": true,
    // "noUnusedLocals": true, //uncomment this for prod
    // "noUnusedParameters": true, //uncomment this for prod
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "out"
  },
  "include": [
    "src",
    "out/local-test.js",
    // "out/sampleData.js"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/pdw.ts",
      "src/connectors/excelConnector.ts",
      "src/connectors/firestoreConnector.ts",
      "src/connectors/plainTextConnector.ts",
      "src/connectors/sqliteConnector.ts"
    ],
    "out": "docs"
  }
}